{
  "name": "truffle-express-boilerplate",
  "version": "1.0.0",
  "description": "A simple boilerplate that contains a setup of truffle and express ",
  "main": "server.js",
  "scripts": {
    "start": "nodemon server.js",
    "test": "npx truffle test",
    "lint": "eslint --cache --fix --ignore-path .gitignore",
    "solhint": "solhint 'contracts/**/*.sol' --fix --ignore-path .gitignore",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skeithc/truffle-express-boilerplate.git"
  },
  "keywords": [
    "truffle",
    "express",
    "boilerplate",
    "nft",
    "erc721",
    "token",
    "cryptocurrency",
    "ethereum",
    "ethers"
  ],
  "author": "Skeith <skeith@asterialabs.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/skeithc/truffle-express-boilerplate/issues"
  },
  "homepage": "https://github.com/skeithc/truffle-express-boilerplate#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "express-validator": "^6.14.0",
    "mongoose": "^6.4.6",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@truffle/hdwallet-provider": "^2.0.8",
    "eslint": "^8.14.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eth-gas-reporter": "^0.2.25",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "nodemon": "^2.0.16"
  },
  "lint-staged": {
    "*.js": "npm run lint",
    "*.sol": "npm run solhint"
  }
}
